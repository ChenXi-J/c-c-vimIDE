/dts-v1/;

#include "rk3399-oet-port.dtsi"


/ {
	model = "AIO-3399J Board (Linux Opensource)";
	compatible = "rockchip,rk3399-firefly", "rockchip,rk3399";

	test-power {
		status = "okay";
	};

	/delete-node/ vcc-sd;
	sdmmc_pwrseq: sdmmc-pwrseq {
		compatible = "mmc-pwrseq-simple";
		clocks = <&rk808 1>;
		clock-names = "ext_clock";
		pinctrl-names = "default";
		pinctrl-0 = <&sdcard_enable_h>;
		/*
		* On the module itself this is one of these (depending
		* on the actual card populated):
		* - SDIO_RESET_L_WL_REG_ON
		* - PDN (power down when low)
		*/
		reset-gpios = <&gpio1 20 GPIO_ACTIVE_LOW>; /* GPIO1_C4 */
	};

	apc_leds {
		compatible = "leds-apc";
		apc-ledR = <&gpio1 17 GPIO_ACTIVE_HIGH>;
		apc-ledY = <&gpio1 20 GPIO_ACTIVE_HIGH>;
		apc-ledB = <&gpio1 11 GPIO_ACTIVE_LOW>;
	};

	ec20_gpio{
		compatible = "ec20-gpio";
		enable-gpio = <&gpio4 26 GPIO_ACTIVE_LOW>;
		reset-gpio = <&gpio4 22 GPIO_ACTIVE_HIGH>;
	};

	gpio_apc_ctrl{
		compatible	= "gpio_apc_ctrl";
		usb2-en		= <&gpio2 12 GPIO_ACTIVE_LOW>;
		usb3-en		= <&gpio2 0 GPIO_ACTIVE_LOW>;
		typec0-en	= <&gpio2 1 GPIO_ACTIVE_LOW>;
		cs-485		= <&gpio1 12 GPIO_ACTIVE_LOW>;
		alm-acc		= <&gpio2 20 IRQ_TYPE_EDGE_FALLING>;
		alm-sig1	= <&gpio2 22 IRQ_TYPE_EDGE_FALLING>;
		alm-sig2	= <&gpio2 23 IRQ_TYPE_EDGE_FALLING>;
		alm-sig3	= <&gpio2 25 IRQ_TYPE_EDGE_FALLING>;
		alm-sig4	= <&gpio2 24 IRQ_TYPE_EDGE_FALLING>;
		gps-rst		= <&gpio4 28 GPIO_ACTIVE_HIGH>;
		sim-ch		= <&gpio4 18 IRQ_TYPE_EDGE_BOTH>;
		};

};

&cdn_dp {
	status = "disabled";
};

&hdmi_dp_sound {
	status = "okay";
};

&rt5640 {
