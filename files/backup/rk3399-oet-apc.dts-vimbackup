    u2phy0_otg: otg-port {
        rockchip,vbus-always-on;
        vbus-5v-gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>;
        //vbus-5v-gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;
        status = "okay";
    };
};

